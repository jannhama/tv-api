<script>

$(document).ready(function() {

	var articles = <%- JSON.stringify(articles) %>

	for(var i = 0; i < articles.length; ++i) {

		if(i===2) {
			$(".post1 h2").text(articles[i].title);
			$(".post1 p:first").text(articles[i].text);
		} else if(i===1) {
			$(".post2 h2").text(articles[i].title);
			$(".post2 p:first").text(articles[i].text);
		} else {
			$(".post3 h2").text(articles[i].title);
			$(".post3 p:first").text(articles[i].text);
		}
	}

});


</script>

