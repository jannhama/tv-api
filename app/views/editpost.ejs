<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
	<div class="container">
		<h1>Edit post</h1>

		<form class="post-form" method="post" action="/post/edit/<%=article._id%>">
			<div class="form-group">
				<input type="text" placeholder="Title" class="form-control" name="title" value="<%=article.title%>">
			</div>
			<div class="form-group">
				<textarea class="form-control" rows="10" placeholder="Content" name="text"><%=article.text%></textarea>
			</div>
			<button class="btn btn-success" type="submit">Save changes</button>
		</form>

	</div>
</div>

